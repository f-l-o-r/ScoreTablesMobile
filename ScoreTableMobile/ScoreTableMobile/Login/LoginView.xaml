<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScoreTableMobile.Login.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Entry x:Name="entUsername"  Placeholder="username" Grid.Row="0" Grid.Column="0"></Entry>
                <Entry x:Name="entPassword" Placeholder="password" Grid.Row="1" Grid.Column="0"></Entry>
                <Button x:Name="btnSignIn" Clicked="onClickSignIn" Text="SignIn"  Grid.Row="2" Grid.Column="0"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>