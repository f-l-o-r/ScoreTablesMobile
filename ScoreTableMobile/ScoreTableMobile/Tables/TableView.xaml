    <ContentPage.Content>
        <StackLayout>
            <syncfusion:SfDataGrid x:Name="dataGrid" ColumnSizer="Auto" ItemsSource="{Binding OrderInfoCollection}" AutoGenerateColumns="False" HorizontalOptions="FillAndExpand">
